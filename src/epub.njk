---
pagination:
  data: languages
  size: 1
  alias: lang
permalink: "{{ '/' if lang.code == 'en' else '/' + lang.code + '/' }}epub/"
layout: epub-base.njk
---

<input type="radio" name="audience" id="writers" checked="checked">
  <input type="radio" name="audience" id="designers">
    <input type="radio" name="audience" id="developers">
      <fieldset class="audience-selector-fieldset">
        <legend>{{ 'choose_role_legend' | i18n }}</legend>
        <div class="audience-selector">
          <label for="writers">
            <span class="sr-only">{{ 'view_features_for' | i18n }}</span>
            {{ 'audience_writers' | i18n }}
          </label>
          <label for="designers">
            <span class="sr-only">{{ 'view_features_for' | i18n }}</span>
            {{ 'audience_designers' | i18n }}
          </label>
          <label for="developers">
            <span class="sr-only">{{ 'view_features_for' | i18n }}</span>
            {{ 'audience_developers' | i18n }}
          </label>
        </div>
      </fieldset>
      <div class="features" aria-live="polite">
        <h2 class="sr-only">{{ 'feature_details_heading' | i18n }}</h2>
        <!-- Writers features -->
        <div class="feature-set writers-features">
          <div class="feature">
            <h3>{{ 'feature_plain_text' | i18n }}</h3>
            <p>{{ 'feature_plain_text_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_instant_epub' | i18n }}</h3>
            <p>{{ 'feature_instant_epub_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_no_install' | i18n }}</h3>
            <p>{{ 'feature_no_install_desc' | i18n }}</p>
          </div>
        </div>
        <!-- Designers features -->
        <div class="feature-set designers-features">
          <div class="feature">
            <h3>{{ 'feature_live_preview' | i18n }}</h3>
            <p>{{ 'feature_live_preview_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_responsive_design' | i18n }}</h3>
            <p>{{ 'feature_responsive_design_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_visual_feedback' | i18n }}</h3>
            <p>{{ 'feature_visual_feedback_desc' | i18n }}</p>
          </div>
        </div>
        <!-- Developers features -->
        <div class="feature-set developers-features">
          <div class="feature">
            <h3>{{ 'feature_rapid_iteration' | i18n }}</h3>
            <p>{{ 'feature_rapid_iteration_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_third_party' | i18n }}</h3>
            <p>{{ 'feature_third_party_desc' | i18n }}</p>
          </div>
          <div class="feature">
            <h3>{{ 'feature_debugging' | i18n }}</h3>
            <p>{{ 'feature_debugging_desc' | i18n }}</p>
          </div>
        </div>
      </div>
      <div class="sample-files" aria-live="polite">
        <h2>{{ 'sample_files_heading' | i18n }}</h2>
        <!-- Writers samples -->
        <div class="sample-set writers-samples">
          <ul>
            {% for file in sampleFiles.writers %}
            <li class="sample-item">
              <span class="sample-name">{{ file.displayName }}</span>
              <div class="sample-buttons">
                <button class="btn-open" onclick="openInSeed('{{ file.path }}')">Open</button>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
        <!-- Designers samples -->
        <div class="sample-set designers-samples">
          <ul>
            {% for file in sampleFiles.designers %}
            <li class="sample-item">
              <span class="sample-name">{{ file.displayName }}</span>
              <div class="sample-buttons">
                <button class="btn-open" onclick="openInSeed('{{ file.path }}')">Open</button>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
        <!-- Developers samples -->
        <div class="sample-set developers-samples">
          <ul>
            {% for file in sampleFiles.developers %}
            <li class="sample-item">
              <span class="sample-name">{{ file.displayName }}</span>
              <div class="sample-buttons">
                <button class="btn-open" onclick="openInSeed('{{ file.path }}')">Open</button>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="app-frame">
        <div class="app-frame-header">
          <button class="fullscreen-toggle" aria-label="{{ 'toggle_fullscreen' | i18n }}" title="{{ 'toggle_fullscreen' | i18n }}">
            <span class="fullscreen-icon expand" aria-hidden="true">↗</span>
            <span class="fullscreen-icon compress" aria-hidden="true">↙</span>
          </button>
        </div>
        <iframe src="/epub/SEED.html" title="{{ 'iframe_title' | i18n }}" aria-labelledby="app-heading"></iframe>
      </div>
      
      <div class="license-section">
        <h2>{{ 'license_heading' | i18n }}</h2>
        <p class="license-text">{{ licenseText }}</p>
        <a href="/epub/SEED.html" download="SEED.html" class="download-button">{{ 'download_seed_button' | i18n }}</a>
        <div style="text-align: center;">
          <a href="{{ '/' if lang.code == 'en' else '/' + lang.code + '/' }}epub/questions/" class="questions-button">{{ 'questions_button' | i18n }}</a>
        </div>
      </div>